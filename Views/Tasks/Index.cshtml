@model IEnumerable<GalaxyBuildersSystem.Models.GTask>

@{
    ViewBag.Title = "Index";
}

<h2>My Tasks</h2>

@using (Html.BeginForm("MarkAsDone", "Tasks", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAssigned)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAssigned)
                    </td>
                    <td>
                        <div class="form-group">
                            @Html.Label("Mark as Done", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => item.IsDone)
                                    @Html.ValidationMessageFor(model => item.IsDone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-default" />
            </div>
        </div>
    }
    else
    {
        <label style="text-align:center">There are currently no tasks assigned to you</label>
    }
}

<div>
    @Html.ActionLink("Back to Team", "Index", "Employees")
</div>
